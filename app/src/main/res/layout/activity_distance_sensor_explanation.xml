<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="近接センサー"
                        android:id="@+id/textView"
                        android:textSize="44dp"
                        android:singleLine="false"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="きんせつせんさー"
                        android:id="@+id/textView3"
                        android:textColor="#888888"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="とは"
                    android:id="@+id/textView2"
                    android:textSize="22dp"
                    android:textColor="#535353"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="近接センサーは、直接触れなくても対象物からスマホの距離を計ることができるセンサー。通常スマホの画面上部の内カメラの近くにある。"
                android:id="@+id/textView4"
                android:textColor="#393939"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/sensor_test_numtext"
                    android:layout_marginTop="30dp"
                    android:elevation="5dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="動作確認"
                        android:id="@+id/textView5"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="現在約"
                            android:id="@+id/textView6"
                            android:textSize="16dp"
                            android:layout_gravity="bottom|top" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text=" ? "
                            android:id="@+id/textView7"
                            android:textSize="60dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="cmセンチメートル"
                        android:id="@+id/textView8" />

                </LinearLayout>

                <ImageView
                    android:layout_width="138dp"
                    android:layout_height="245dp"
                    android:id="@+id/imageView14"
                    android:layout_gravity="left|bottom"
                    android:scaleType="fitCenter"
                    android:src="@drawable/smart_phone_appdistance"
                    android:layout_margin="10dp"
                    android:layout_marginRight="20dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
